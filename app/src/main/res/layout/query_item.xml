<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:backgroundTint="#121b22"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius=".1dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/queryimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/krishna" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/querydate"
            android:text="11/10/2002"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/queryusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/queryimg"
            android:text="username" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/lkl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:backgroundTint="#1D2C37"
            android:layout_below="@id/queryimg"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:textColor="#787878"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:text="why the problem is so critical that i cannot solve please help to solve it it not not solving any one is here can help anybody" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lkl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upvoteimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/upvote" />

            <TextView
                android:id="@+id/upvotecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="#4CAF50"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/downvoteimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_arrow_back" />

            <TextView
                android:id="@+id/downvotecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="#F44336"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalanswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="view all answer"
                android:textColor="@color/white"
                android:layout_marginLeft="50dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/answerquery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/lkl"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:src="@drawable/answer" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>