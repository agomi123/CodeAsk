<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="#121b22"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121b22">

        <ImageView
            android:id="@+id/moreoption"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_menu" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/publimage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/krishna" />

        <TextView
            android:id="@+id/pubpublisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/publimage"
            android:fontFamily="@font/font2"
            android:text="publisher"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/publocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pubpublisher"
            android:layout_marginLeft="0dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/publimage"
            android:text="MMMUT GorakhPur"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/postimage"
            >
            <ImageView
                android:id="@+id/like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_favorite_border" />

            <TextView
                android:id="@+id/likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/font4"
                android:text="10"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />
            <ImageView
                android:id="@+id/comment"
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_comment" />
            <TextView
                android:id="@+id/commentcount"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:gravity="center|center_vertical"
                android:fontFamily="@font/font4"
                android:text="10" />
            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="6dp"
                android:src="@drawable/ic_baseline_share" />
        </LinearLayout>

        <ImageView
            android:id="@+id/postimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pubpublisher"
            android:layout_marginTop="18dp"
            android:src="@mipmap/ic_launcher"
            android:maxHeight="500dp" />

        <TextView
            android:id="@+id/postdescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ror"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/f1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/postdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postdescr"
            android:text="nnnnnnn"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:textSize="11sp" />

       <ImageView
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:visibility="gone"
           android:id="@+id/savepost12"/>
    </RelativeLayout>
</LinearLayout>